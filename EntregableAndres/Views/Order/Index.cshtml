@model IEnumerable<EntregableAndres.Entity.Order>

@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var errorMessage = TempData["ErrorMessage"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
<div class="alert alert-danger">
    @errorMessage
</div>}

<div class="container mt-4">
    <h2>Orders</h2>
    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Order")" class="btn btn-primary">Create New Order</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Customer Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.CustomerId</td>
                    <td>
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info btn-sm">View</a>
                        <a href="@Url.Action("Edit", "Order", new { id = order.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Order", new { id = order.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
