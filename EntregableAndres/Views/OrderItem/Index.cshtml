@model IEnumerable<EntregableAndres.Entity.OrderItem>
@{
    ViewData["Title"] = "Order Items List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <a href="@Url.Action("Create", "OrderItem")" class="btn btn-primary">Add New Order Item</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model)
            {
                <tr>
                    <td>@orderItem.OrderId</td>
                    <td>@orderItem.Product.Name</td>
                    <td>@orderItem.Quantity</td>
                    <td>@orderItem.UnitPrice</td>
                    <td>@(orderItem.Quantity * orderItem.UnitPrice)</td>
                    <td>
                        <a href="@Url.Action("Edit", "OrderItem", new { id = orderItem.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "OrderItem", new { id = orderItem.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
